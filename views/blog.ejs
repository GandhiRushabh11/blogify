<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); -%>
  </head>

  <body>
    <%- include('./partials/scripts'); -%> <%- include('./partials/navbar'); -%>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="/public<%= blog.coverImageURL %>" width="400px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <h3>Author Name</h3>
      <img src="/public<%= blog.createdBy.profilePhotoURL %>" width="70px" />
      <h3 class="mt-3"><%= blog.createdBy.firstName %></h3>
    </div>
    <div class="container mt-4">
      <h1>Commemts (<%=comment.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="message"
            name="message"
            aria-describedby="message"
            placeholder="Enter you Commemts"
          />
          <br />
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <% } %>
      <div class="mb-3">
        <% comment.forEach(comment => { %>
        <div>
          <img
            src="/public<%= blog.createdBy.profilePhotoURL %>"
            width="50px"
          />
          <%= comment.createdBy.firstName %>
          <pre><%= comment.message%></pre>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
</html>
